<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcercaFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C29B61"
        android:backgroundTint="#C29B61"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#C29B61"
            android:backgroundTint="#C29B61"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="29dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="150px"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:paddingTop="60px"
                android:text="Galeria de arte Ecuatoriano"
                android:textColor="#FBFBFB"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="310px">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="223dp"
            app:srcCompat="@drawable/acerca" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:paddingLeft="25px"
            android:text="Acerca de la app"
            android:textColor="#35684A"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingLeft="20px"
            android:text="Grupo 6"
            android:textColor="#1B1818"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25px"
            android:text="Creadores:  Scarlet Gutiérrez, Maria Zhringri y Ivette Zamora"
            android:textColor="#201D1D"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25px"
            android:text="Descripción:"
            android:textColor="#1E1B1B"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25px"
            android:text="La aplicación de arte ecuatoriano se enfoca en brindar a los amantes del arte  la oportunidad de explorar y apreciar las maravillosas obras de arte ecuatorianas. "
            android:textColor="#1B1717"
            android:textSize="16sp" />

    </LinearLayout>

</FrameLayout>